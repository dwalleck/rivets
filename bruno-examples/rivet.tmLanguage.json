{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rivet",
  "scopeName": "source.rivet",
  "fileTypes": ["rivet"],
  "patterns": [
    { "include": "#comment" },
    { "include": "#meta-block" },
    { "include": "#text-block" },
    { "include": "#list-block" },
    { "include": "#depends-block" }
  ],
  "repository": {
    "comment": {
      "name": "comment.line.number-sign.rivet",
      "match": "#.*$"
    },
    "meta-block": {
      "begin": "\\b(meta)\\s*\\{",
      "end": "\\}",
      "beginCaptures": {
        "1": { "name": "keyword.control.rivet" }
      },
      "patterns": [
        { "include": "#comment" },
        { "include": "#meta-field" }
      ]
    },
    "meta-field": {
      "match": "^\\s*(id|status|priority|created|updated|closed)\\s*:\\s*(.*)$",
      "captures": {
        "1": { "name": "variable.other.property.rivet" },
        "2": { "name": "string.unquoted.rivet" }
      }
    },
    "text-block": {
      "begin": "\\b(title|description|notes|design)\\s*\\{",
      "end": "\\}",
      "beginCaptures": {
        "1": { "name": "keyword.control.rivet" }
      },
      "contentName": "string.unquoted.rivet",
      "patterns": [
        {
          "name": "markup.heading.rivet",
          "match": "^\\s*##.*$"
        },
        {
          "name": "markup.list.rivet",
          "match": "^\\s*[-*]\\s+"
        },
        {
          "name": "markup.inline.raw.rivet",
          "match": "`[^`]+`"
        },
        {
          "begin": "```",
          "end": "```",
          "name": "markup.fenced_code.block.rivet"
        }
      ]
    },
    "list-block": {
      "begin": "\\b(labels|assignees)\\s*\\[",
      "end": "\\]",
      "beginCaptures": {
        "1": { "name": "keyword.control.rivet" }
      },
      "patterns": [
        { "include": "#comment" },
        {
          "name": "string.unquoted.rivet",
          "match": "^\\s*[^\\]#]+"
        }
      ]
    },
    "depends-block": {
      "begin": "\\b(depends-on)\\s*\\[",
      "end": "\\]",
      "beginCaptures": {
        "1": { "name": "keyword.control.rivet" }
      },
      "patterns": [
        { "include": "#comment" },
        { "include": "#dependency-line" }
      ]
    },
    "dependency-line": {
      "match": "^\\s*([\\w-]+)\\s*:\\s*(blocks|blocked-by|related)\\s*$",
      "captures": {
        "1": { "name": "entity.name.tag.rivet" },
        "2": { "name": "constant.language.rivet" }
      }
    }
  }
}
